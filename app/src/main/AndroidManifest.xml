<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.touristapp">

    <application
        android:allowBackup="true"
        android:icon="@drawable/launchericon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CultureActivity"
            android:label="Culture"/>

        <activity
            android:name=".RestaurantsActivity"
            android:label="Restaurants"/>

        <activity
            android:name=".PubsActivity"
            android:label="Pubs"/>

        <activity
            android:name=".OutdoorActivity"
            android:label="Outdoor Activities"/>

    </application>

</manifest>